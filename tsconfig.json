{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": false,
		"module": "es6",
		"sourceMap": true,
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"src/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"./src"
	]
}